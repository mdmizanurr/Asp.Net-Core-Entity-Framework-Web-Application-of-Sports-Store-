<!DOCTYPE html>

<html>

<!--**********  Head  **********-->
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- [if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![ednif]-->
    <link asp-href-include="~/lib/fontawesome/css/all.css" rel="stylesheet" />
    <link asp-href-include="/lib/bootstrap/dist/css/base.css" rel="stylesheet" />
    <link asp-href-include="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <link rel="stylesheet" asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid" />


    <title>Sports Store</title>
</head>

        <!-- Body Start-->
<body style="background-color: #808080">


    <!-- Row-1: Header Section NAV-bar1-->
    <nav class="navbar navbar-expand-md navbar-light sticky-top" role="navigation"
         style="background-color: #ffd800;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><b>Company Name</b></a>
            @*<button class="vanbar-toggle" type="button" data-toggle="collapse" data-target="#navbarResponsive">
                    <span class="navbar-toggler-icon"></span>
                </button>*@
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index"><i class="fas fa-home"></i> Home</a> </li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Product" asp-action="List"><i class="fas fa-warehouse"></i> Product</a> </li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index"><i class="fas fa-user-secret"></i> Admin Login</a> </li>
                </ul>
            </div>

            <div class="text-right">
                <b>Your Cart</b>  @await Component.InvokeAsync("CartSummary")
                <br />
            </div>


        </div>
    </nav>

            <!-- Row-2: -->

    <div class="container" style="background-color: #0094ff">
        <div class="row">
            <div id="categories" class="col-md-3">
                @await Component.InvokeAsync("NavigationMenu")
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>

    <!--   Footer   -->
    <footer>
        <div class="row">
            <div class="col-sm-2">
                <img src="~/imgs/Logo.PNG" class="img-responsive">
            </div>
            <div class="col-sm-2">
                <h5>Company</h5>
                <ul class="list-unstyled">
                    <li><a href="#">Documentation</a></li>
                    <li><a href="#">Production</a></li>
                    <li><a href="#">About us</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </div>
            <div class="col-sm-2">
                <h5>Social</h5>
                <ul class="list-unstyled">
                    <li><a href="#">Facebook</a></li>
                    <li><a href="#">Twitter</a></li>
                    <li><a href="#">Blog</a></li>
                </ul>
            </div>

            <div class="col-sm-2">
                <h5>Support</h5>
                <ul class="list-unstyled">
                    <li><a href="#">Contact</a></li>
                    <li><a href="#">Privacy Policy</a></li>
                    <li><a href="#">Terms & Condition</a></li>
                    <li><a href="#">Help Desk</a></li>
                </ul>
            </div>

            <div class="col-sm-4">
                <address>
                    <strong>Daily Fitness.</strong>
                    Address line 1<br>
                    Address line 2<br>
                    <abbr title="Phone">P:</abbr>(123) 456-7890
                </address>
            </div>
        </div>
    </footer>


    <!--Script file link-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>


</body>
</html>
